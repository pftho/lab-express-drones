<div class="list-page">

    <h2>Available drones</h2>

    {{#each droneData}}

    <h3> {{this.name}}</h3>
    <ul>
        <li>Propellers: {{this.propellers}}</li>
        <li> maxSpeed: {{this.maxSpeed}}</li>
    </ul>

    <div class="btn">
        <a href="/drones/{{this._id}}/edit"> Edit drone </a>


        <form action="/drones/{{_id}}/delete" method="POST">
            <button class="blue-btn">Delete</button>
        </form>
    </div>

    {{/each}}

</div>
<div class="form-page">
    <h2>Create a new drone</h2>

    <div class="form-create-update-drone">

        <form action="/drones/create" method="POST">
            <div>
                <label for="name"> Drone Name</label>
                <input type="text" name="name" id="name">
            </div>
            <div>
                <label for="propellers"> Propellers</label>
                <input type="text" name="propellers" id="propellers">
            </div>
            <div>
                <label for="maxSpeed"> Max Speed</label>
                <input type="text" name="maxSpeed" id="maxSpeed">
            </div>
            <input class="blue-btn" type="submit">

        </form>

    </div>
</div>